<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:weightSum="1"
    android:background="@drawable/gradient">


    <!--android:layout_centerHorizontal="true"-->
    <Button
        android:id="@+id/waterMe"
        android:layout_width="154dp"
        android:layout_height="60dp"
        android:text="@string/water_me"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="43dp"
        app:layout_constraintRight_toLeftOf="@+id/tipsandtricks"
        android:layout_marginRight="44dp"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/tipsandtricks"
        android:layout_width="155dp"
        android:layout_height="60dp"
        android:text="@string/tips_and_tricks"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="43dp"
        app:layout_constraintRight_toLeftOf="@+id/imageView"
        android:layout_marginRight="18dp"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/ViewMyPlants"
        android:layout_width="154dp"
        android:layout_height="54dp"
        android:text="@string/view_my_plants"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/tipsandtricks"
        app:layout_constraintRight_toLeftOf="@+id/imageView"
        android:layout_marginRight="19dp"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/addPlant"
        android:layout_width="154dp"
        android:layout_height="56dp"
        android:text="@string/add_a_plant"
        android:layout_marginBottom="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="138dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/WhatsNext"
        android:layout_width="155dp"
        android:layout_height="56dp"
        android:layout_weight="0.02"
        android:text="@string/what_s_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ViewMyPlants"
        android:layout_marginRight="43dp"
        android:layout_marginBottom="124dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/waterMe"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="RtlHardcoded" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="271dp"
        android:layout_height="258dp"
        app:srcCompat="@mipmap/garden"
        android:padding="0dp"
        android:layout_weight="1.10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintVertical_bias="0.438"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/clip_art_gardnning_image"
        tools:ignore="RtlHardcoded" />

</android.support.constraint.ConstraintLayout>
